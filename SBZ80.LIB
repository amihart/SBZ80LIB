common def EMULOAD ADDR%, fname$
  var dat$
  load "txt:" + fname$, FALSE out dat$
  if len(dat$) and 1 == 1 then
    dat$ = mid$(dat$, 0, len(dat$) - 1)
  endif
  var i%
  for i% = 0 to len(dat$) - 2 step 2
    MEM%[i% / 2 + ADDR%] = hex8(mid$(dat$, i%, 2))
  next
end
